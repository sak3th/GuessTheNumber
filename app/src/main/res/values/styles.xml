<resources xmlns:android="http://schemas.android.com/apk/res-auto">

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Small</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorNumPlain">@color/num_plain</item>
        <item name="colorNumSelected">@color/num_selected</item>
        <item name="colorNumDisabled">@color/num_disabled</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>

        <item name="colorActionCardBackground">@color/cardview_light_background</item>

        <item name="numTextColorSecondary">@color/num_color_state_list</item>
        <item name="actionTextColorSecondary">@color/num_color_state_list</item>

        <item name="backgroundProfilePic">@drawable/ic_mood_black_48dp</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Small</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorNumPlain">@color/num_plain_light</item>
        <item name="colorNumSelected">@color/num_selected_light</item>
        <item name="colorNumDisabled">@color/num_disabled_light</item>

        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorTertiary">@color/text_tertiary_light</item>

        <item name="colorActionCardBackground">@color/cardview_dark_background</item>

        <item name="numTextColorSecondary">@color/num_color_state_list_light</item>
        <item name="actionTextColorSecondary">@color/num_color_state_list_light</item>

        <item name="backgroundProfilePic">@drawable/ic_mood_white_48dp</item>
    </style>

</resources>
